<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @employer.name %>
</p>

<p>
  <b>Email:</b>
  <%= @employer.email %>
</p>

<p>
  <b>Phone:</b>
  <%= @employer.phone %>
</p>

<p>
  <b>Website:</b>
  <%= @employer.website %>
</p>

<p>
  <b>City:</b>
  <%= @employer.city %>
</p>

<p>
  <b>Job:</b>
  <ul>
  <% @employer.jobs.each do |job_index| %>
    <li><%= link_to "#{job_index.headline}", job_url(job_index.id) %></li>
  <% end %>
</ul>
</p>


